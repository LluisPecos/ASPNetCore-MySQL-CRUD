            </div>
            <div class="form-group">
                <label asp-for="HeadOfState" class="control-label"></label>
                <input asp-for="HeadOfState" class="form-control" />
                <span asp-validation-for="HeadOfState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capital" class="control-label"></label>
                <input asp-for="Capital" class="form-control" />
                <span asp-validation-for="Capital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code2" class="control-label"></label>
                <input asp-for="Code2" class="form-control" />
                <span asp-validation-for="Code2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

